<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans.xsd">
 <bean name="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
     <property name="driverClassName">
         <value>com.mysql.cj.jdbc.Driver</value>
     </property>
     <property name="url">
         <value>jdbc:mysql://127.0.0.1:3306/bpm?useUnicode=true&amp;characterEncoding=UTF-8&amp;userSSL=false&amp;serverTimezone=GMT%2B8
         </value>
     </property>
     <property name="username">
         <value>test</value>
     </property>
     <property name="password" value="test" />
		
	</bean>
        <bean id="processEngineConfiguration"
          class="com.shareniu.chapter6.MyStandaloneProcessEngineConfiguration">  
          <property name="history" value="audit" />
           <property name="databaseSchemaUpdate" value="true" />  
          <property name="dataSource"   ref="dataSource"> </property>
          <property name="eventListeners"  ref="eventListeners"></property>
             <property name="enableDatabaseEventLogging" value="true"></property>
          <property name="typedEventListeners">
          <map>
           <entry key="TASK_CREATED,TASK_COMPLETED,ENTITY_CREATED"  value-ref="eventListeners"/>  
          </map>
          </property>
        <!--  <property name="enableEventDispatcher" value="false"></property>  -->
        </bean> 
     <bean id="eventListeners" class="com.shareniu.chapter6.ShareniuEventListener">
     
     </bean>
</beans>